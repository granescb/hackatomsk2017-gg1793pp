.app-component
  width 100%
  height 100%
  min-width 1220px
  overflow hidden
  
  &__content
    display flex
    align-items stretch
    justify-content space-between
    margin 0.3rem 0rem
    margin-bottom 0
    align-items flex-start
    justify-content space-between
    margin 0.3rem 0rem
    
    &_position
      &_left-block
        flex-shrink 0
        width 10.5%
        background-color #ddd

      &_center-block
        display flex
        flex-direction column
        flex 1 0 auto
        min-height calc(100vh - 125px)
        width 53%
        margin-left 0.5%
        margin-right 0.5%
      &_right-block
        display flex
        flex-direction column
        flex 1 0 auto
        width 20%
  &__center-content-wrapper
    width 100%
    min-width 100%
    flex-grow 1
