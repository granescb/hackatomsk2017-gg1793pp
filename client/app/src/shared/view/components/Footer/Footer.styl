.footer
  background-color #f7f7f7
  border-top 1px solid #dddddd
  display flex
  width 100%
  font-size 1.2rem
  margin-top 1rem
  position absolute
  bottom 0px
  &__wrapper
    display flex
    flex-direction column
    justify-content space-between
    padding 10px 30px
    &_position
      display flex
      &_left
        width 34%
      &_center
        width 42%
        align-items center
      &_right
        align-items flex-end
        width 24%
        text-align right
  &__line
    display flex
    align-items center
  &__container-icon
    height 20px
    width 20px
  &__icon
    width 100%
    height 100%
    margin-left 4%