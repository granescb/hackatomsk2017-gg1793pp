.header
  display flex
  background-color #f6f6f6
  height 4.3rem
  position relative
  &__wrapper
    display inline-block
    margin auto
    &_position
      &_left
        width 50%
        display flex
        align-items center
        justify-content flex-start
      &_center
        position absolute
        margin auto auto
        left 0
        right 0
        top 25%
        z-index 1
        width 40%
      &_right
        width 50%
        display flex
        justify-content flex-end

  &__img-container
    width 20px
    height 20px
    margin-left 4.5%
  &__img
    width 100%
    height 100%
  
  &__button
    margin-right 10px