.input
  display flex
  align-items center
  width 100%
  height 100%

  &__select-wrapper
    display flex
    width 100%
    height 100%
    align-items center

  &__select
    background transparent
    border-radius 0
    color #666
    background-color #ffffff
    border 1px solid #d0d0d0
    height 100%
    width 100%

    &_primary
      -webkit-appearance none
      padding 0 8px
      font-size 1.1rem
      background-color #ffffff
      background-size 3rem
      width 100%
      height 100%
      border 1px solid #d0d0d0
      color #797979
      cursor pointer
    &_additional
      font-size 1.1rem
      background none
      background-color #333333
      width 100px
    &_bold
      font-weight bold
      font-size 1.2rem
      
  &__input, 
  &__date
    width 100%
    padding 0 8px
    font-size 1.1rem
    height 100%
    border 1px solid #d0d0d0
    &_styleClass
      &_rounded
        border-radius 3px
        padding-left 10%
  &__date 
    color #787878
    