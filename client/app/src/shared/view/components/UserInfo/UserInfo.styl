.user-info
  display flex
  height 6.3rem
  width 100%
  padding 0 60px

  &__wrapper
    display inline-block
    margin auto
    &_position
      &_left
        width 30%
        display flex
        align-items center
        justify-content flex-start
        text-decoration none
      &_center
        display flex
        width 40%
        display flex
      &_right
        width 30%
        display flex
        justify-content flex-end